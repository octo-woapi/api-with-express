{
  "name": "api-with-nodejs",
  "version": "1.0.0",
  "description": "An API with Express",
  "main": "index.js",
  "scripts": {
    "start": "node ./bin/start",
    "watch": "nodemon ./bin/start",
    "lint": "eslint *.js",
